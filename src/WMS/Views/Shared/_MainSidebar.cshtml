@using ru.emlsoft.WMS.Data.Abstract.Access
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using ru.emlsoft.WMS.Data.Dto
@using ru.emlsoft.WMS.Localization
@using Microsoft.Extensions.Localization;

@inject IStringLocalizer<SharedResource> _sharedLocalizer

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->

    <a href="http://www.eml-soft.ru" class="brand-link">
        <img src="dist/img/emlsoft.png" alt="emlsoft" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">Eml-soft WMS</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>

            <div class="info">
                <a href="#" class="d-block">@User.Identity?.Name</a>
            </div>
        </div>

        <nav class="mt-2">
            <ul class="sidebar-menu" data-widget="tree">
                @await Component.InvokeAsync("Menu")
            </ul>
        </nav>
    </div>
    <!-- /.sidebar -->
</aside>
